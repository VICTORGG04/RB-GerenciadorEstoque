<div class="d-flex justify-content-between align-items-center mb-4">
  <h2>Lista de Produtos</h2>
  <div>
    <a href="/produtos/novo" class="btn btn-primary">Adicionar</a>
    <a href="/importar" class="btn btn-success">Importar</a>
    <button id="btn-editar" class="btn btn-info" disabled>Editar</button>
    <form id="form-excluir-selecionados" action="/produtos/excluir" method="POST" style="display:inline;">
      <button id="btn-excluir" class="btn btn-danger" disabled>Excluir</button>
    </form>
  </div>
</div>

<div class="card">
  <div class="table-wrapper">
    <table>
      <thead>
      <tr>
        <th><input type="checkbox" id="select-all" class="form-check-input"></th>
        <th>ID</th>
        <th>Nome</th>
        <th>Código</th>
        <th>Qtd.</th>
        <th>Preço Unit.</th>
        <th>Categoria</th>
        <th>Data</th>
      </tr>
      </thead>
      <tbody>
      <% @produtos.each do |produto| %>
        <tr>
          <td><input type="checkbox" name="produtos_ids[]" value="<%= produto['id'] %>" class="form-check-input produto-checkbox"></td>
          <td><%= produto['id'] %></td>
          <td><%= h produto['nome'] %></td>
          <td><%= h produto['codigo'] %></td>
          <td><%= produto['quantidade'] %></td>
          <td>R$ <%= '%.2f' % produto['preco'] %></td>
          <td><%= h produto['categoria'] %></td>
          <td><%= Date.parse(produto['data_adicionado']).strftime('%d/%m/%Y') %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>