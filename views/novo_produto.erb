<div class="form-card">
  <div class="form-card-header"><h2>Adicionar Novo Produto</h2></div>
  <div class="form-card-body">
    <form action="/produtos/novo" method="POST">
      <div class="form-group">
        <label for="nome" class="form-label">Nome do Produto</label>
        <input type="text" id="nome" name="nome" class="form-input" placeholder="Ex: Notebook Lenovo" required>
      </div>
      <div class="form-group">
        <label for="codigo" class="form-label">Código / SKU</label>
        <input type="text" id="codigo" name="codigo" class="form-input" placeholder="Ex: NTB-LNV-001">
      </div>
      <div class="form-row">
        <div class="form-group">
          <label for="quantidade" class="form-label">Quantidade</label>
          <input type="number" id="quantidade" name="quantidade" class="form-input" required>
        </div>
        <div class="form-group">
          <label for="preco" class="form-label">Preço (R$)</label>
          <input type="text" id="preco" name="preco" class="form-input" placeholder="Ex: 3500.00" required>
        </div>
      </div>
      <div class="form-group">
        <label for="categoria" class="form-label">Categoria</label>
        <input type="text" id="categoria" name="categoria" class="form-input" placeholder="Ex: Eletrônicos">
      </div>
      <div class="form-actions">
        <button type="submit" class="btn btn-primary btn-submit">Adicionar Produto</button>
        <a href="/" class="btn-cancel">Cancelar</a>
      </div>
    </form>
  </div>
</div>