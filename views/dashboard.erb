<div class="d-flex justify-content-between align-items-center mb-4">
  <h2>Dashboard</h2>
  <div class="header-actions"> <a href="/produtos/novo" class="btn btn-primary">Adicionar Produto</a>
    <a href="/importar" class="btn btn-success">Importar Produtos</a>
  </div>
</div>

<div class="dashboard-main-content">
  <div class="card mb-3">
    <div class="card-header">Resumo do Estoque</div>
    <div class="card-body">
      <p>Total de Produtos (Itens): <strong><%= @quantidade_total %></strong></p>
      <p>Valor Total em Estoque: <strong>R$ <%= '%.2f' % @valor_total %></strong></p>
    </div>
  </div>

  <div class="card mb-3">
    <div class="card-header">Produtos Recentes</div>
    <div class="table-wrapper">
      <table>
      </table>
    </div>
  </div>

  <div class="card mb-3">
    <div class="card-header">An√°lise por Categoria</div>
    <div class="grafico-carousel-container">
      <div id="grafico-valor-container" class="grafico-slide active">
        <h3>Valor Total por Categoria</h3>
        <canvas id="graficoValorCanvas"></canvas>
      </div>
      <div id="grafico-quantidade-container" class="grafico-slide">
        <h3>Quantidade Total por Categoria</h3>
        <canvas id="graficoQuantidadeCanvas"></canvas>
      </div>
      <button id="prev-slide" class="carousel-control prev">&#10094;</button>
      <button id="next-slide" class="carousel-control next">&#10095;</button>
    </div>
