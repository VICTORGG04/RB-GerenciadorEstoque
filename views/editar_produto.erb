<%# views/editar_produto.erb %>

<div class="form-card form-card-sm"> <%# Mantenha form-card e form-card-sm para centralização e tamanho %>
  <div class="form-header">
    <h2>Editar Produto: <span class="produto-nome-destaque"><%= h(@produto['nome']) %></span></h2> <%# SPAN para destaque no nome %>
    <%# Opcional: Adicionar uma pequena descrição ou instrução %>
    <p class="form-description">Altere os detalhes do produto e salve suas modificações.</p>
  </div>

  <%# Mensagens Flash (se você as implementou no layout e no JS) %>
  <% if @sucesso_mensagem %>
    <div class="alert alert-success mt-3 mb-3"><%= h(@sucesso_mensagem) %></div>
  <% end %>
  <% if @erro_mensagem %>
    <div class="alert alert-danger mt-3 mb-3"><%= h(@erro_mensagem) %></div>
  <% end %>

  <form action="/produtos/<%= h(@produto['id']) %>/editar" method="POST">
    <div class="mb-3">
      <label for="nome" class="form-label">Nome do Produto</label>
      <input type="text" id="nome" name="nome" class="form-control" value="<%= h(@produto['nome']) %>" required>
    </div>
    <div class="mb-3">
      <label for="quantidade" class="form-label">Quantidade</label>
      <input type="number" id="quantidade" name="quantidade" class="form-control" value="<%= h(@produto['quantidade']) %>" min="0" required>
    </div>
    <div class="mb-3">
      <label for="preco" class="form-label">Preço Unitário</label>
      <input type="number" id="preco" name="preco" class="form-control" step="0.01" value="<%= '%.2f' % h(@produto['preco']) %>" min="0" required>
    </div>
    <div class="mb-3">
      <label for="categoria" class="form-label">Categoria (Opcional)</label>
      <input type="text" id="categoria" name="categoria" class="form-control" value="<%= h(@produto['categoria']) %>">
    </div>
    <div class="mb-3">
      <label for="codigo" class="form-label">Código do Produto</label>
      <input type="text" id="codigo" name="codigo" class="form-control" value="<%= h(@produto['codigo']) %>" required>
    </div>
    <div class="d-flex justify-content-end mt-4 gap-2">
      <button type="submit" class="btn btn-primary">Salvar Alterações</button>
      <a href="/produtos" class="btn btn-secondary">Cancelar</a>
    </div>
  </form>
</div>